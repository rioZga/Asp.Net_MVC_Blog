@model List<BlogPost>?
@{
    ViewData["Title"] = "Author Dashboard";
}
<div class="d-flex justify-content-between">
    <h1 class="h3 mb-0">@ViewBag.Title</h1>
    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="BlogPost" asp-action="Create">Add New</a>
</div>

<hr />

@if (Model != null && Model.Count > 0)
{
    <div class="row mb-3">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Title</th>
                            <th>Creation date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.Title</td>
                            <td>@post.CreatedAt.ToShortDateString()</td>
                            <td>
                                <a class="btn btn-sm btn-outline-success" asp-area="" asp-controller="BlogPost" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-area="" asp-controller="BlogPost" asp-action="Delete" asp-route-id="@post.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>

        </div>
    </div>
}
